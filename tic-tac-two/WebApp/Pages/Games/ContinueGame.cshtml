@page
@model WebApp.ContinueGame

<h1>Continue Game</h1>
<h2>Choose game mode: </h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameMode" class="control-label">Choose game mode:</label>
                <select asp-for="GameMode" class="form-select" asp-items="Model.GameModes" name="GameMode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>