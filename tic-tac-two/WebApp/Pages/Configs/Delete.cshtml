@page
@model WebApp.Pages_Configs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Configuration</h1>
    <h3>Are you sure you want to delete this configuration?</h3>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Configuration Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.ConfigName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.ConfigName)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.BoardWidth)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.BoardWidth)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.BoardHeight)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.BoardHeight)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.WinCondition)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.WinCondition)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.AmountOfPieces)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.AmountOfPieces)
                </dd>

                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.MovePieceAndGridAfterNMoves)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.MovePieceAndGridAfterNMoves)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.GridWidth)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.GridWidth)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.GridHeight)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.GridHeight)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.CreatedAt)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Config.ModifiedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Config.ModifiedAt)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end mb-5">
        <form method="post">
            <input type="hidden" asp-for="Config.Id" />
            <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</div>

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
